{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@base/*": ["./src/base/*"],
      "@rest/*": ["./src/rest/*"],
      "@microservice/*": ["./src/microservice/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
    }
  }
}
